<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Имя"
        android:id="@+id/textView"
        android:layout_marginTop="20dp"
     />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Номер"
        android:id="@+id/textView2"
        android:layout_below="@+id/editText7"
         />

    <Button
        android:layout_width="298dp"
        android:layout_height="84dp"
        android:text="Записать"
        android:id="@+id/button3"
        android:layout_marginBottom="34dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="34dp"
        android:layout_marginEnd="34dp" />

    <EditText
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:id="@+id/editText6"
        android:layout_below="@+id/editText7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/editText5"
        android:layout_below="@+id/editText6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сумма"
        android:id="@+id/textView3"
        android:layout_below="@id/editText6"/>

    <EditText
        android:layout_width="292dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText7"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="54dp"
        android:id="@+id/hourse1" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/hourse1"
        android:layout_toRightOf="@+id/editText5"
        android:layout_toEndOf="@+id/editText5"
        android:id="@+id/minutes1" />

    <TextView
        android:text="Время начала:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText5"
        android:layout_marginTop="35dp"
        android:id="@+id/textView10" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/minutes1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/minute2" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="55dp"
        android:layout_marginEnd="55dp"
        android:id="@+id/hourse2"
        android:layout_alignBaseline="@+id/minute2"
        android:layout_alignBottom="@+id/minute2"
        android:layout_toLeftOf="@+id/minute2"
        android:layout_toStartOf="@+id/minute2" />

    <TextView
        android:text="Время окончания:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignLeft="@+id/hourse2"
        android:layout_alignStart="@+id/hourse2"
        android:id="@+id/textView11" />
</RelativeLayout>