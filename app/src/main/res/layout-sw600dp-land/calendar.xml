<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <GridView

        android:numColumns="7"
        android:id="@+id/gridView"
        android:gravity="center"
        android:columnWidth="50dp"
        android:stretchMode="spacingWidth"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:textSize="40sp"
        android:layout_below="@+id/gridView2"
        android:clickable="true"
        android:textAlignment="center"
        android:textFilterEnabled="false"
        android:layout_alignRight="@+id/gridView2"
        android:layout_alignEnd="@+id/gridView2"
        android:touchscreenBlocksFocus="false"
        android:transcriptMode="disabled"
        android:drawSelectorOnTop="true"/>
    <GridView

        android:numColumns="7"
        android:id="@+id/gridView2"
        android:gravity="center"
        android:columnWidth="50dp"
        android:stretchMode="columnWidth"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="54dp"
        android:background="#52b0ff"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2"
        android:transcriptMode="disabled" />



    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/button"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="24dp" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/button2"
        android:textSize="24dp"
        android:layout_alignBottom="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner3"
        android:layout_above="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/button2" />
    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:layout_alignTop="@+id/spinner3"
        android:layout_toLeftOf="@+id/spinner3"
        android:layout_toStartOf="@+id/spinner3"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignBottom="@+id/button2" />

    <TextView

        android:id="@+id/textView"
        android:gravity="center"
        android:stretchMode="columnWidth"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Date:"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/button2"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Информация"
        android:id="@+id/textView4"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textIsSelectable="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/button2" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lv_front"
        android:focusable="true"
        android:layout_below="@+id/gridView2"
        android:layout_alignLeft="@+id/spinner2"
        android:layout_alignStart="@+id/spinner2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
